  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run main.py",
      "type": "shell",
      "command": [
        "export LOCAL_DEV=true;",
        "python3.10 main.py < input.txt > output.txt;"
      ],
      "problemMatcher": []
    },
    {
      "label": "Generate inputs to input.txt",
      "type": "shell",
      "command": [
        "export LOCAL_DEV=true;",
        "python3.10 testcase_gen.py > input.txt;"
      ],
      "problemMatcher": []
    },
    {
      "label": "Compare bruteforce with main.py",
      "type": "shell",
      "command": [
        "export LOCAL_DEV=true;",
        "python3.10 main.py < input.txt > output.txt;",
        "python3.10 bruteforce.py < input.txt > output_bruteforce.txt;",
        "diff output.txt output_bruteforce.txt;"
      ],
      "problemMatcher": []
    }
  ]
}
